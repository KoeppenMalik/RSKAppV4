<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="@color/grey">
    <View
            android:id="@+id/divider4"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@drawable/divider_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView5" app:layout_constraintTop_toTopOf="@+id/textView5"
            app:layout_constraintBottom_toBottomOf="@+id/textView5" android:layout_marginLeft="4dp" android:layout_marginStart="4dp"
            android:layout_marginRight="8dp" android:layout_marginEnd="8dp"/>
    <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:layout_marginEnd="16dp"
                 android:background="@android:color/transparent" android:src="@drawable/ic_edit"
                 app:layout_constraintTop_toTopOf="parent" app:layout_constraintRight_toRightOf="parent"
                 android:layout_marginRight="16dp" android:layout_marginTop="16dp" android:id="@+id/imageButtonEditData"/>
    <Button
            android:text="@string/started"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonSetStartTime"
            android:background="@drawable/button_background_1" android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView4" android:layout_marginTop="16dp" android:drawableLeft="@drawable/ic_play"
            android:paddingRight="10dp"/>
    <Button
            android:text="@string/stopped"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonSetStopTime"
            app:layout_constraintTop_toBottomOf="@+id/buttonSetStartTime" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/buttonSetStartTime" android:background="@drawable/button_background_2"
            android:textColor="@android:color/white" android:paddingRight="10dp" android:drawableLeft="@drawable/ic_stop"
            app:layout_constraintEnd_toEndOf="@+id/buttonSetStartTime"/>
    <TextView
            android:textStyle="bold"
            android:text="@string/unknown" android:textAppearance="@android:style/TextAppearance.Large"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewCurrentName"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="none" android:editable="false"
            android:ems="10" app:backgroundTint="@android:color/white"
            android:id="@+id/editTextStartTime"
            app:layout_constraintBottom_toBottomOf="@+id/buttonSetStartTime" app:layout_constraintStart_toEndOf="@+id/buttonSetStartTime"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:textColor="@android:color/white"/>

    <EditText
        android:id="@+id/editTextTotalTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:editable="false"
        android:ems="10"
        android:inputType="none"
        android:textColor="@android:color/white"
        app:backgroundTint="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="none" android:editable="false"
            android:ems="10" app:backgroundTint="@android:color/white"
            android:id="@+id/editTextStopTime"
            app:layout_constraintBottom_toBottomOf="@+id/buttonSetStopTime"
            android:textColor="@android:color/white" app:layout_constraintStart_toStartOf="@+id/editTextStartTime"/>
    <View
            android:id="@+id/divider2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintEnd_toStartOf="@+id/textView4" app:layout_constraintTop_toTopOf="@+id/textView4"
            app:layout_constraintBottom_toBottomOf="@+id/textView4" android:layout_marginRight="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="4dp" android:layout_marginStart="4dp"
            android:background="@drawable/divider_background_1"/>
    <View
            android:id="@+id/divider7"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@drawable/divider_background_2"
            app:layout_constraintEnd_toStartOf="@+id/textView8" app:layout_constraintTop_toTopOf="@+id/textView8"
            app:layout_constraintBottom_toBottomOf="@+id/textView8" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="4dp" android:layout_marginStart="4dp" android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="@string/workTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp" android:layout_marginStart="32dp"
            android:textColor="@android:color/white" android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" app:layout_constraintTop_toBottomOf="@+id/textViewDate"
            android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/pause"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/buttonSetStopTime" />
    <View
            android:id="@+id/divider3"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintStart_toEndOf="@+id/textView4" app:layout_constraintBottom_toBottomOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="@+id/textView4" android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="4dp" android:layout_marginEnd="4dp"
            android:background="@drawable/divider_background"/>
    <View
            android:id="@+id/divider6"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@drawable/divider_background_2"
            app:layout_constraintStart_toEndOf="@+id/textView8" app:layout_constraintTop_toTopOf="@+id/textView8"
            app:layout_constraintBottom_toBottomOf="@+id/textView8" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="4dp" android:layout_marginEnd="4dp" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="3dp"/>
    <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@drawable/divider_background_1"
            android:layout_marginEnd="4dp" android:layout_marginRight="4dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/textView5" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="@+id/textView5"
            app:layout_constraintBottom_toBottomOf="@+id/textView5"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:fadeScrollbars="false"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toStartOf="@+id/buttonAddPause"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewDate"
            app:layout_constraintTop_toBottomOf="@+id/textViewCurrentName" app:layout_constraintStart_toStartOf="@+id/textViewCurrentName"
            android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/textViewWorkDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:textColor="@color/grey"
        app:layout_constraintStart_toStartOf="@+id/textViewDate"
        app:layout_constraintTop_toBottomOf="@+id/textViewDate" />

    <ImageButton
        android:id="@+id/buttonAddPause"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider6"
        app:srcCompat="@drawable/ic_add" />
</androidx.constraintlayout.widget.ConstraintLayout>