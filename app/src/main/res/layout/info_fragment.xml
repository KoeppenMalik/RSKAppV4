<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="@color/grey">
    <TextView
            android:text="@string/appInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewAppName"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/white" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <TextView
            android:text="Ort: Deutschland/Brandenburg"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textViewLocation"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/white" app:layout_constraintStart_toStartOf="@+id/textViewName"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/divider10" android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/textViewVersion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Version: 4.1"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewLocation"
        app:layout_constraintTop_toBottomOf="@+id/divider11" />
    <TextView
            android:text="Erstellt am: 23.01.2021 um 15:27 Uhr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewDate"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/white" app:layout_constraintStart_toStartOf="@+id/textViewVersion"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/divider12" android:layout_marginTop="8dp"/>
    <TextView
            android:text="Programmiert von: Malik Köppen"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textViewName"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/white" app:layout_constraintStart_toStartOf="@+id/textViewAppName"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/textViewAppName"
            android:layout_marginTop="48dp" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Erstellt für Rolf Simon-Köppen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewCreated"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/white" app:layout_constraintStart_toStartOf="@+id/textViewAppName"
            app:layout_constraintTop_toBottomOf="@+id/textViewDate" android:layout_marginTop="48dp"/>
    <Button
            android:text="@string/back"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/buttonBack"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            android:background="@drawable/button_background_1" android:textColor="@android:color/white" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" app:layout_constraintEnd_toEndOf="parent"/>
    <View
            android:id="@+id/divider10"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:background="@drawable/divider_background"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp" android:layout_marginEnd="4dp" android:layout_marginRight="4dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textViewName"
            android:layout_marginTop="8dp"/>
    <View
            android:id="@+id/divider11"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:background="@drawable/divider_background_2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp" app:layout_constraintTop_toBottomOf="@+id/textViewLocation" android:layout_marginTop="8dp"/>
    <View
            android:id="@+id/divider12"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:background="@drawable/divider_background_1"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp" app:layout_constraintTop_toBottomOf="@+id/textViewVersion" android:layout_marginTop="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>